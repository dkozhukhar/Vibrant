{
	"name": "vibrant",
	"description": "Abstract ballistic shooter game.",
	"targetType": "executable",

	"sourcePaths": ["source/vibrant"],
	"importPaths": ["source/vibrant"],

    "sourceFiles-windows": ["vibrant.res"],

	"buildRequirements": 
	[
		"disallowInlining"
	],

	"dependencies": {
        "vibrant:derelict": "*",
        "vibrant:common2": "*"	
    },

    "libs-posix":["dl"],


    "subPackages": [
        {
            "name": "derelict",
            "sourcePaths": [ "source/derelict" ],
            "importPaths": [ "source/derelict" ],
            "targetType": "library",
            "libs-windows": ["gdi32", "user32"]
        },
        {
            "name": "common2",
            "sourcePaths": [ "source/common2" ],
            "importPaths": [ "source/common2" ],
            "targetType": "library",

            "dependencies": {
                "vibrant:derelict": "*",
                "gfm:core": "~>2.0",
				"gfm:math": "~>2.0",
                "gfm:image": "~>2.0"
            }
        }
    ]
}
